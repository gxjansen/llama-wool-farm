{
  "name": "llama-wool-farm",
  "version": "1.0.0",
  "description": "A progressive web app idle clicker game about llamas producing wool",
  "main": "src/index.ts",
  "scripts": {
    "dev": "webpack serve --mode development --config webpack.config.js",
    "dev:https": "npm run generate-ssl && webpack serve --mode development --config webpack.config.js",
    "build": "webpack --mode production --config webpack.config.js",
    "build:analyze": "webpack --mode production --config webpack.config.js --analyze",
    "build:dev": "webpack --mode development --config webpack.config.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "cypress run",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "generate-icons": "node scripts/generate-icons.js",
    "generate-ssl": "node scripts/generate-ssl.js",
    "serve": "serve -s dist -p 8080",
    "serve:https": "serve -s dist -p 8080 --ssl-cert ssl/server.crt --ssl-key ssl/server.key",
    "clean": "rimraf dist coverage .webpack-cache",
    "validate": "npm run lint && npm run type-check && npm run test",
    "prepare": "husky install"
  },
  "keywords": [
    "game",
    "phaser",
    "pwa",
    "idle",
    "clicker",
    "typescript"
  ],
  "author": "Llama Wool Farm Team",
  "license": "MIT",
  "dependencies": {
    "phaser": "^3.80.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@reduxjs/toolkit": "^2.0.1",
    "react-redux": "^9.0.4",
    "decimal.js": "^10.4.3",
    "axios": "^1.6.5",
    "socket.io-client": "^4.7.4",
    "localforage": "^1.10.0",
    "workbox-webpack-plugin": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "workbox-expiration": "^7.0.0",
    "workbox-background-sync": "^7.0.0",
    "workbox-cacheable-response": "^7.0.0",
    "workbox-core": "^7.0.0",
    "workbox-navigation-preload": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-bundle-analyzer": "^4.10.1",
    "html-webpack-plugin": "^5.6.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.9.1",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "terser-webpack-plugin": "^5.3.10",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "mini-css-extract-plugin": "^2.7.7",
    "webpack-pwa-manifest": "^4.3.0",
    "clean-webpack-plugin": "^4.0.0",
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "babel-loader": "^9.1.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.2.0",
    "jest-canvas-mock": "^2.5.2",
    "canvas": "^2.11.2",
    "cypress": "^13.6.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "rimraf": "^5.0.5",
    "serve": "^14.2.1",
    "sharp": "^0.33.2",
    "webpack-merge": "^5.10.0",
    "compression-webpack-plugin": "^11.0.0",
    "postcss": "^8.4.33",
    "postcss-loader": "^7.3.4",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
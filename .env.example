# Llama Wool Farm Environment Configuration
# Copy this file to .env and update values as needed

# ===================================
# Development Environment
# ===================================
NODE_ENV=development
PORT=3000
HTTPS=true
HOST=localhost

# ===================================
# API Configuration
# ===================================
# Backend API endpoint
API_URL=http://localhost:8080
API_TIMEOUT=30000

# WebSocket configuration
WS_URL=ws://localhost:8080
WS_RECONNECT_INTERVAL=5000
WS_MAX_RECONNECT_ATTEMPTS=10

# ===================================
# Security
# ===================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://localhost:3000

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI=/api/csp-report

# API Keys (development only - use secure vault in production)
ANALYTICS_API_KEY=dev_analytics_key_replace_in_production
SENTRY_DSN=

# ===================================
# Feature Flags
# ===================================
# Core features
ENABLE_ANALYTICS=false
ENABLE_ERROR_TRACKING=false
ENABLE_SERVICE_WORKER=true
ENABLE_PWA=true
ENABLE_OFFLINE_MODE=true

# Game features
ENABLE_MULTIPLAYER=false
ENABLE_CLOUD_SAVE=false
ENABLE_ACHIEVEMENTS=true
ENABLE_LEADERBOARD=false
ENABLE_DAILY_REWARDS=true
ENABLE_SPECIAL_EVENTS=true

# Experimental features
ENABLE_WEBGL2=false
ENABLE_WASM=false
ENABLE_WORKER_THREADS=false

# ===================================
# Build Configuration
# ===================================
# Source maps for debugging
SOURCE_MAP=true
SOURCE_MAP_STYLE=eval-source-map

# Bundle optimization
BUNDLE_ANALYZER=false
MINIMIZE_BUNDLES=false
TREE_SHAKING=true

# Asset optimization
COMPRESS_IMAGES=true
IMAGE_QUALITY=85
MAX_ASSET_SIZE=512000

# ===================================
# Performance
# ===================================
# Caching
WEBPACK_CACHE=true
BABEL_CACHE=true
CACHE_DIRECTORY=.cache

# Memory limits
NODE_OPTIONS=--max-old-space-size=4096

# Parallel processing
PARALLEL_BUILDS=true
WORKER_POOL_SIZE=4

# ===================================
# Game Configuration
# ===================================
# Gameplay
INITIAL_LLAMAS=1
INITIAL_WOOL=0
BASE_WOOL_RATE=1
OFFLINE_PROGRESS_CAP=86400

# Balancing
PRESTIGE_MULTIPLIER=2.0
UPGRADE_COST_SCALING=1.15
BUILDING_COST_SCALING=1.25

# Limits
MAX_OFFLINE_TIME=86400
MAX_LLAMAS=1000000
MAX_BUILDINGS_PER_TYPE=999

# ===================================
# Logging & Monitoring
# ===================================
# Log levels: error, warn, info, debug, trace
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/app.log

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# Error reporting
ERROR_REPORTING_ENABLED=false
ERROR_REPORTING_SAMPLE_RATE=1.0

# ===================================
# Testing
# ===================================
TEST_TIMEOUT=10000
TEST_RETRIES=1
COVERAGE_THRESHOLD=80
E2E_BASE_URL=http://localhost:3000
E2E_HEADLESS=true

# ===================================
# Development Tools
# ===================================
# Hot reload
HMR_ENABLED=true
HMR_TIMEOUT=20000

# DevTools
REDUX_DEVTOOLS=true
REACT_DEVTOOLS=true

# Debugging
DEBUG=false
DEBUG_NAMESPACE=llama:*

# ===================================
# Deployment
# ===================================
# CDN Configuration
CDN_URL=
ASSET_PREFIX=/

# Build paths
PUBLIC_PATH=/
BUILD_PATH=dist

# Deployment target
DEPLOY_TARGET=netlify
NETLIFY_SITE_ID=
NETLIFY_AUTH_TOKEN=

# ===================================
# Database (Future)
# ===================================
# For future backend integration
DB_TYPE=sqlite
DB_PATH=./data/game.db
DB_SYNC=false

# Redis (for future scaling)
REDIS_URL=
REDIS_PREFIX=llama:

# ===================================
# Third-party Services
# ===================================
# Google Analytics
GA_TRACKING_ID=

# Facebook Pixel
FB_PIXEL_ID=

# Discord Rich Presence
DISCORD_CLIENT_ID=

# Steam Integration
STEAM_APP_ID=

# ===================================
# Localization
# ===================================
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr,de,ja,zh
LOCALE_DETECTION=true

# ===================================
# Advanced
# ===================================
# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Memory management
MEMORY_LIMIT_CHECK=true
MEMORY_WARNING_THRESHOLD=0.8
MEMORY_CRITICAL_THRESHOLD=0.95

# Profiling
ENABLE_PROFILING=false
PROFILE_OUTPUT_DIR=./profiles
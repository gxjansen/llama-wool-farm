# Database Configuration
DATABASE_URL=mongodb://localhost:27017/llama_wool_farm
DATABASE_NAME=llama_wool_farm
DATABASE_TEST_NAME=llama_wool_farm_test

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Server Configuration
PORT=3000
NODE_ENV=development
API_VERSION=v1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-here
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
EMAIL_FROM=noreply@llamawoolfarm.com
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DESTINATION=uploads/

# AWS S3 Configuration (if using cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=llama-wool-farm-uploads

# Cloudinary Configuration (alternative to S3)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# External API Keys
WEATHER_API_KEY=
MARKET_PRICE_API_KEY=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# Development Configuration
DEBUG=llama-wool-farm:*
VERBOSE_LOGGING=false

# Production Configuration
PRODUCTION_URL=https://your-production-domain.com
SSL_CERT_PATH=
SSL_KEY_PATH=

# Analytics Configuration
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Monitoring Configuration
SENTRY_DSN=
DATADOG_API_KEY=

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DESTINATION=backups/

# Testing Configuration
TEST_DATABASE_URL=mongodb://localhost:27017/llama_wool_farm_test
TEST_JWT_SECRET=test-jwt-secret
TEST_TIMEOUT=10000
EOF < /dev/null